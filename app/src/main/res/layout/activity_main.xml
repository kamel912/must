<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/bg"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="-1"
    android:layout_height="-1"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <TableLayout android:layout_width="match_parent" android:layout_height="match_parent">
                <TableRow android:id="@+id/tableRow1" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="10dp">
                    <Button android:id="@+id/map_btn" android:text="@string/map" android:drawableTop="@drawable/map_btn" android:layout_weight="1.0" style="@style/DashboardButton" />
                    <Button android:id="@+id/news_btn" android:text="@string/news" android:drawableTop="@drawable/news_btn" android:layout_weight="1.0" style="@style/DashboardButton" />
                </TableRow>
                <TableRow android:id="@+id/tableRow2" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="10dp">
                    <Button android:id="@+id/std_btn" android:text="@string/studentzone" android:drawableTop="@drawable/student_btn" android:layout_weight="1.0" style="@style/DashboardButton" />
                    <Button android:id="@+id/about_btn" android:text="@string/aboutus" android:drawableTop="@drawable/about_btn" android:layout_weight="1.0" style="@style/DashboardButton" />
                </TableRow>
                <TableRow android:id="@+id/tableRow3" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="10dp">
                    <Button android:id="@+id/photo_btn" android:text="@string/album" android:drawableTop="@drawable/album_btn" android:layout_weight="1.0" style="@style/DashboardButton" />
                    <Button android:id="@+id/contact_btn" android:text="@string/contact" android:drawableTop="@drawable/contact_btn" android:layout_weight="1.0" style="@style/DashboardButton" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
